<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="hebi_arm">

  <!-- *************************** XACRO MACROS *************************** -->

  <xacro:property name="PI" value="3.1415926535897931" />

  <!-- load macros for modules -->
  <xacro:include filename="./module_common.xacro"/>
  <xacro:include filename="./rotary_module.xacro"/>
  <xacro:include filename="./extension_module.xacro"/>
  <xacro:include filename="./elbow_module.xacro"/>

  <!-- ************************* ROBOT DEFINITION ************************* -->

  <!-- just for visualization: base post -->
  <link name="base">
    <visual>
      <origin xyz="0 0 0.23" rpy="0 0 0" />
      <geometry>
        <box size="0.0508 0.0508 0.46" />
      </geometry>
      <xacro:silver_material/>
    </visual>
  </link>
  <joint name="base-SA019" type="fixed">
    <parent link="base"/>
    <child link="SA019|Arm|INPUT_INTERFACE"/>
    <origin xyz="0 -0.0254 0.43" rpy="1.57075 0 0"/>
  </joint>

  <!-- first joint -->
  <xacro:rotary_module joint="SA019|Arm" child="SA024|Arm"/>

  <!-- second joint -->
  <xacro:rotary_module joint="SA024|Arm" child="elbow|Arm"/>

  <!-- elbow joint -->
  <xacro:elbow_module name="elbow|Arm" child="SA006|Arm"
    length1="0.1206" twist1="0" length2="0.0191" twist2="${-PI/2}"/>

  <!-- third joint -->
  <xacro:rotary_module joint="SA006|Arm" child="extender|Arm"/>

  <!-- extension module -->
  <xacro:extension_module name="extender|Arm" child="SA021|Arm" length="0.163" twist="${-PI/2}"/>

  <!-- third joint -->
  <xacro:rotary_module joint="SA021|Arm" child="SA034|Arm"/>

  <!-- first half of joint -->
  <xacro:rotary_module_in name="SA034|Arm|INPUT_INTERFACE"/>
  <xacro:collar parent="SA034|Arm|INPUT_INTERFACE"/>
  <!-- fingers -->
  <joint name="SA034-SA034-fixed-finger" type="fixed">
    <parent link="SA034|Arm|INPUT_INTERFACE"/>
    <child link="SA034-fixed-finger"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>
  <link name="SA034-fixed-finger">
    <visual>
      <origin xyz="0.022 -0.015 0.0616" rpy="0 0 0" />
      <xacro:silver_material/>
      <geometry>
        <box size="0.01 0.03 0.05" />
      </geometry>
    </visual>
  </link>
  <!-- actual rotary joint: -->
  <joint name="SA034|Arm" type="revolute">
    <parent link="SA034|Arm|INPUT_INTERFACE"/>
    <child link="SA034-out"/>
    <origin xyz="0 0 0.0366" rpy="0 -0.78540 0"/>
    <axis xyz="0 1 0"/>
    <limit effort="1.5" lower="-1.57" upper="1.57" velocity="2.208932"/>
  </joint>
  <link name="SA034-out">
    <visual>
      <origin xyz="-0.022 -0.015 0.025" rpy="0 0 0" />
      <xacro:silver_material/>
      <geometry>
        <box size="0.01 0.03 0.05" />
      </geometry>
    </visual>
  </link>

</robot>
